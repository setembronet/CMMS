rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Função para verificar se o usuário é um administrador do SaaS
    function isAdmin() {
      return request.auth.token.admin == true;
    }
    
    // Nega todo o acesso por padrão
    match /{document=**} {
      allow read, write: if false;
    }

    // Regra Global: Admins podem ler e escrever em qualquer coleção
    match /{path=**} {
      allow read, write: if isAdmin();
    }
  }
}
