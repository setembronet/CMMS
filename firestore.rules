rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Funções de Apoio ---
    function isAdmin() {
      return request.auth.token.admin == true;
    }

    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    function isManager() {
      return getUserData().cmmsRole == 'GESTOR';
    }

    function isTechnician() {
      return getUserData().cmmsRole == 'TECNICO';
    }

    function isOwner(resource) {
        return getUserData().clientId == resource.data.clientId;
    }
    
    // Nega acesso a todas as coleções por padrão
    match /{document=**} {
      allow read, write: if false;
    }

    // Acesso total para Admins
    match /{path=**} {
        allow read, write: if isAdmin();
    }
    
    // Regras para Gestores
    match /{path=**} {
      allow read, write: if isManager() && isOwner(resource);
    }
    
    // Regras para Técnicos
    match /assets/{assetId} {
      allow read: if isTechnician() && isOwner(resource);
    }

    match /workOrders/{orderId} {
      allow read: if isTechnician() && isOwner(resource);
      allow update: if isTechnician() && request.auth.uid == resource.data.responsibleId;
    }
  }
}
